<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_upActivity">

    <!--    상단-->


    <!--    회원가입 관련 요소들-->


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="205dp"
        android:layout_marginBottom="585dp"
        android:fontFamily="@font/gmarket_bold"
        android:text="Sing Up"
        android:textColor="#791DEE"

        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_scrap"
        app:layout_constraintStart_toStartOf="@+id/make_email"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/make_email"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="332dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="email 입력"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/make_password"
        app:layout_constraintStart_toStartOf="@+id/make_password"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/make_password"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginBottom="383dp"
        android:ems="10"
        android:hint="비밀번호 입력"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btn_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/make_email" />

    <Button
        android:id="@+id/btn_goto_login"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="506dp"
        android:layout_marginBottom="275dp"

        android:text="회원 가입"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_scrap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--하단버튼-->


    <Button
        android:id="@+id/btn_setting"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="1dp"
        android:background="#00ff0000"
        android:drawableTop="@drawable/setting"
        android:importantForAccessibility="no"
        android:text="버튼 텍스트"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/btn_home"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginBottom="1dp"
        android:background="#00ff0000"
        android:drawableTop="@drawable/home"
        android:importantForAccessibility="no"
        android:text="버튼 텍스트"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.231"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/make_password" />

    <Button
        android:id="@+id/btn_scrap"
        android:layout_width="61dp"
        android:layout_height="0dp"
        android:background="#00ff0000"
        android:drawableTop="@drawable/scrap"
        android:importantForAccessibility="no"
        android:text="버튼 텍스트"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btn_apply"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginStart="216dp"
        android:layout_marginBottom="1dp"
        android:background="#00ff0000"
        android:drawableTop="@drawable/apply"
        android:importantForAccessibility="no"
        android:text="버튼 텍스트"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/btn_log_in"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginStart="280dp"
        android:layout_marginBottom="1dp"
        android:background="#00ff0000"
        android:drawableTop="@drawable/log_in"
        android:importantForAccessibility="no"
        android:text="버튼 텍스트"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>